{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": false,
    "sourceMap": false,
    "resolveJsonModule": true,
    "allowJs": true,
    "types": ["node"]
  },
  "include": [
    "src/server.ts",
    "src/lib/**/*",
    "src/types/**/*",
    "src/data/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/components/**/*",
    "src/context/**/*",
    "src/hooks/**/*",
    "src/assets/**/*",
    "src/styles/**/*",
    "src/main.tsx",
    "src/App.*",
    "src/index.css"
  ]
}